# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================
APP_NAME="Streaming Platform"
APP_URL="https://tu-dominio.com"
APP_ENV="production"
APP_DEBUG=false

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================
DB_HOST="localhost"
DB_NAME="streaming_platform"
DB_USER="root"
DB_PASS=""
DB_PORT=3306

# ===========================================
# REDIS (Caché y Sesiones)
# ===========================================
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# ===========================================
# SERVIDOR RTMP (Transmisión en vivo)
# ===========================================
RTMP_HOST="rtmp://tu-dominio.com/live"
RTMP_PORT=1935

# ===========================================
# HLS (HTTP Live Streaming)
# ===========================================
HLS_BASE_URL="https://tu-dominio.com/hls"

# ===========================================
# JWT (Autenticación con Tokens)
# ===========================================
# IMPORTANTE: Genera una clave segura con: php -r "echo bin2hex(random_bytes(32));"
JWT_SECRET="genera-una-clave-segura-aleatoria-de-64-caracteres"
JWT_ALGORITHM="HS256"
JWT_EXPIRY=86400

# ===========================================
# MERCADOPAGO (Argentina/LATAM)
# ===========================================
PAYMENT_PROVIDER="mercadopago"
MP_PUBLIC_KEY="APP_USR-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
MP_ACCESS_TOKEN="APP_USR-xxxxxxxxxxxx-xxxxxx-xxxxxxxxxxxxxxxx-xxxxxxxxxxxx"
MP_WEBHOOK_SECRET="random_secret_here"
MP_SANDBOX=true

# ===========================================
# STRIPE (Internacional)
# ===========================================
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_SANDBOX=true

# ===========================================
# PAYPAL (Internacional)
# ===========================================
PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""
PAYPAL_WEBHOOK_ID=""
PAYPAL_MODE="sandbox"

# ===========================================
# YOUTUBE API (Opcional)
# ===========================================
YOUTUBE_API_KEY=""

# ===========================================
# CDN (Opcional)
# ===========================================
CDN_URL=""

# ===========================================
# CONFIGURACIÓN DE EMAIL
# ===========================================
MAIL_DRIVER="smtp"
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USERNAME="tu-email@gmail.com"
MAIL_PASSWORD="tu-password-de-aplicacion"
MAIL_ENCRYPTION="tls"
MAIL_FROM_ADDRESS="noreply@tu-dominio.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# WEBHOOK EXTERNO (Opcional)
# ===========================================
WEBHOOK_URL=""

# ===========================================
# CONFIGURACIÓN REGIONAL
# ===========================================
DEFAULT_CURRENCY="ARS"
DEFAULT_TIMEZONE="America/Argentina/Buenos_Aires"
DEFAULT_LOCALE="es_AR"

# ===========================================
# LOGS Y DEBUGGING
# ===========================================
LOG_LEVEL="info"
LOG_PATH="/var/www/streaming/storage/logs"

# ===========================================
# LÍMITES Y SEGURIDAD
# ===========================================
MAX_CONCURRENT_VIEWERS_PER_USER=1
API_RATE_LIMIT=60
UPLOAD_MAX_SIZE=104857600
ALLOWED_VIDEO_FORMATS="mp4,mov,avi,mkv"

# ===========================================
# WATERMARK (Marca de agua en streams)
# ===========================================
WATERMARK_ENABLED=true
WATERMARK_OPACITY=0.3
WATERMARK_POSITION="bottom-right"

# ===========================================
# CHAT EN VIVO
# ===========================================
CHAT_ENABLED=true
CHAT_MODERATION=true
CHAT_MAX_MESSAGE_LENGTH=500

# ===========================================
# ANALÍTICAS
# ===========================================
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=""

# ===========================================
# NOTIFICACIONES
# ===========================================
NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS=false
FIREBASE_API_KEY=""

# ===========================================
# MODO MANTENIMIENTO
# ===========================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Estamos realizando mejoras. Volveremos pronto."

# ===========================================
# ALMACENAMIENTO DE ARCHIVOS
# ===========================================
STORAGE_PATH="/var/www/streaming/storage"
STREAMS_PATH="/var/www/streaming/storage/streams"
VOD_PATH="/var/www/streaming/storage/vod"
TEMP_PATH="/var/www/streaming/storage/temp"

# ===========================================
# CONFIGURACIÓN DE STREAMING
# ===========================================
STREAM_QUALITY_OPTIONS="360p,480p,720p,1080p"
ENABLE_RECORDING=true
ENABLE_DVR=false
DVR_DURATION=7200
DEFAULT_VIDEO_BITRATE=4000
DEFAULT_AUDIO_BITRATE=128
KEYFRAME_INTERVAL=2

# ===========================================
# SESIONES
# ===========================================
SESSION_LIFETIME=3600
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE="lax"

# ===========================================
# CORS (Cross-Origin Resource Sharing)
# ===========================================
CORS_ALLOWED_ORIGINS="*"
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="*"

# ===========================================
# BACKUPS
# ===========================================
BACKUP_ENABLED=false
BACKUP_PATH="/var/www/streaming/backups"
BACKUP_RETENTION_DAYS=30

# ===========================================
# MONITOREO
# ===========================================
MONITORING_ENABLED=true
SENTRY_DSN=""
NEW_RELIC_LICENSE_KEY=""

# ===========================================
# SOCIAL LOGIN (Opcional)
# ===========================================
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""

# ===========================================
# RECAPTCHA (Protección contra bots)
# ===========================================
RECAPTCHA_SITE_KEY=""
RECAPTCHA_SECRET_KEY=""
RECAPTCHA_ENABLED=false