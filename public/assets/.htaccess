# /public/assets/.htaccess
# Configuraci칩n de seguridad para assets

# Permitir acceso a im치genes
<FilesMatch "\.(png|jpg|jpeg|gif|ico|svg|webp)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Denegar acceso a otros tipos de archivos
<FilesMatch "^(?!.*\.(png|jpg|jpeg|gif|ico|svg|webp)$).*$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Prevenir listado de directorios
Options -Indexes

# Configurar tipos MIME
<IfModule mod_mime.c>
    AddType image/png .png
    AddType image/jpeg .jpg .jpeg
    AddType image/gif .gif
    AddType image/x-icon .ico
    AddType image/svg+xml .svg
    AddType image/webp .webp
</IfModule>

# Habilitar cache para im치genes
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
</IfModule>

# Comprimir im치genes si es posible
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>