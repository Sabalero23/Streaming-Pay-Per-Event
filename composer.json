{
    "name": "streaming-platform/pay-per-event",
    "description": "Plataforma de streaming pay-per-event en PHP",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-mysqli": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "firebase/php-jwt": "^6.10",
        "mercadopago/dx-php": "^2.6",
        "stripe/stripe-php": "^13.0",
        "phpmailer/phpmailer": "^6.9",
        "predis/predis": "^2.2",
        "monolog/monolog": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"echo 'Recuerda configurar tu archivo .env con las credenciales correctas\\n';\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
